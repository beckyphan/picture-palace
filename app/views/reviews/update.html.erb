<div class='page-title'>
  <br>
  <%= movie_rating_stars(@review.rating) %>
  <br>
  <h1> <%= @review.review_title %> </h1>
  <h3> <%= @review.movie.movie_title %> Review by <%= @review.user.username %> </h3>
</div>

<%= form_with model: @review, url: movie_review_path(@review), class: "review-form" do |f| %>
  <%= f.label :review_title %>
  <%= f.text_field :review_title, size: "75" %><br>
  <%= f.label :rating %>
  <%= f.select :rating, [1, 2, 3, 4, 5] %><br>
  <%= f.text_area :description, size: "100x5" %>
  <center>
  <%= f.submit "Update Review"%>
  </center>
<% end %>
