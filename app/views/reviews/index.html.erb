<div class='page-title'>
  <h1><%= @movie.movie_title %> Reviews</h1>
</div>

<center>
  <div class="gallery-listing">
    <% @reviews.each do |review| %>
      <div class="listing">
        <%= movie_rating_stars(review.rating) %>
        <br>
        <h2> <%= review.review_title %> </h2>
        <h4> <%= review.movie.movie_title %> Review by <%= review.user.username %> </h4>
        <p><%= review.description %></p>
      </div>
    <% end %>
  </div>

  <br>
  <br>
  <%= button_to "Add new Review", new_movie_review_path(@movie), method: 'get', class: 'button' %>
  <br>
  <br>

</center>
