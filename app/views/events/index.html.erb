<div class='page-title'>
  <h1>events</h1>
</div>

<div class="two-column-body">
  <div class="column-2-left bubble-container">
    <div class="gallery">
      <% @events.each do |e| %>
       <div class="bubble-card">
         <%= link_to event_path(e) do %>
          <div class="movie-card">
            <span class="movie-info">
              <h2><%= e.event_title %></h2>
              <p><%= e.date_time %> | <%= e.location %></p>
            </span>
          </div>
         <% end %>
       </div>
      <% end %>
    </div>
  </div>

<br>

  <div class="column-2-right bubble-container">
    <span><h3>Add a New Event</h3></span>
      <%= form_with model: @event, class: "events-form" do |f| %>
      <br>
      <br> Host: <%= current_user.name %></br>

      <br> <%= f.label :event_title, "Title" %>
            <%= f.text_field :event_title %> </br>

      <br> <%= f.label :date_time, "Date/Time" %>
            <%= f.datetime_field :date_time %> </br>

      <br> <%= f.label :location %>
            <%= f.text_field :location%> </br>

      <br> <%= f.label :movie_id, "Movie" %>
            <%= f.collection_select :movie_id, Movie.all, :id, :movie_title, prompt: true %>  </br>
      <br>
      <br>  <%= f.submit "Create Event" %> </br>
    <% end %>
  </div>
</div>
